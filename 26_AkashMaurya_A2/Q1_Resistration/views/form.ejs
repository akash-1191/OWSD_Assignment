<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Registration Form</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 p-6">
  <div class="max-w-xl mx-auto bg-white p-8 rounded shadow">
    <h2 class="text-2xl font-bold mb-4 text-center">User Registration</h2>

    <% if (errors.length > 0) { %>
      <div class="bg-red-100 text-red-800 p-3 mb-4 rounded">
        <ul class="list-disc list-inside">
          <% errors.forEach(error => { %>
            <li><%= error.msg %></li>
          <% }) %>
        </ul>
      </div>
    <% } %>

    <form action="/submit" method="POST" enctype="multipart/form-data" class="space-y-4" novalidate>
      <div>
        <label class="block font-medium mb-1">Username:</label>
        <input type="text" name="username" value="<%= old.username || '' %>" class="w-full border p-2 rounded" />
      </div>

      <div>
        <label class="block font-medium mb-1">Password:</label>
        <input type="password" name="password" class="w-full border p-2 rounded" />
      </div>

      <div>
        <label class="block font-medium mb-1">Confirm Password:</label>
        <input type="password" name="confirmPassword" class="w-full border p-2 rounded" />
      </div>

      <div>
        <label class="block font-medium mb-1">Email:</label>
        <input type="email" name="email" value="<%= old.email || '' %>" class="w-full border p-2 rounded" />
      </div>

      <div>
        <label class="block font-medium mb-1">Gender:</label>
        <div class="space-x-4 mt-1">
          <label><input type="radio" name="gender" value="Male" <%= old.gender === 'Male' ? 'checked' : '' %> /> Male</label>
          <label><input type="radio" name="gender" value="Female" <%= old.gender === 'Female' ? 'checked' : '' %> /> Female</label>
        </div>
      </div>

      <div>
        <label class="block font-medium mb-1">Hobbies:</label>
        <div class="space-x-4 mt-1">
          <label><input type="checkbox" name="hobbies" value="Cricket" <%= (old.hobbies && old.hobbies.includes('Cricket')) ? 'checked' : '' %> /> Cricket</label>
          <label><input type="checkbox" name="hobbies" value="Music" <%= (old.hobbies && old.hobbies.includes('Music')) ? 'checked' : '' %> /> Music</label>
          <label><input type="checkbox" name="hobbies" value="Reading" <%= (old.hobbies && old.hobbies.includes('Reading')) ? 'checked' : '' %> /> Reading</label>
        </div>
      </div>

      <div>
        <label class="block font-medium mb-1">Upload Profile Picture:</label>
        <input type="file" name="profilePic" class="mt-1" />
        <% if(old.profilePicError){ %>
          <p class="text-red-600 text-sm mt-1"><%= old.profilePicError %></p>
        <% } %>
      </div>

      <div>
        <label class="block font-medium mb-1">Upload Other Pictures:</label>
        <input type="file" name="otherPics" multiple class="mt-1" />
        <% if(old.otherPicsError){ %>
          <p class="text-red-600 text-sm mt-1"><%= old.otherPicsError %></p>
        <% } %>
      </div>

      <div class="text-center mt-4">
        <button type="submit" class="bg-blue-600 text-white px-6 py-2 rounded hover:bg-blue-700">Submit</button>
      </div>
    </form>
  </div>
</body>
</html>
